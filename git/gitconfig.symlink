[user]
	name = Chuck Logan Lim
	email = chucklogan.lim@gmail.com
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[init]
	defaultBranch = master
[pull]
	rebase = false
[core]
	editor = vim
  pager = delta
[push]
	autoSetupRemote = true
[interactive]
  diffFilter = delta --color-only
[delta]
	side-by-side = true
	navigate = true
	hyperlinks = true
[merge]
  conflictstyle = diff3
[diff]
	colorMoved = default
